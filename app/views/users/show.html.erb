<h2><%= @user.name %>のページ</h>
<p><%= image_tag @user.image %></p>
<p>メールアドレス: <%= @user.email %></p>



<div class="container">
<h3><%= @user.name %>のお気に入りブログ</h3>
  <table class="table">
  <tbody>
  <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.feed.user.name %></td>
        <td><%= favorite.feed.content %></td>
        <td><%= link_to 'Show', favorite.feed, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
  </table>

  <%= link_to 'New Feed', new_feed_path, class: 'btn btn-default' %>
  <%= link_to 'Feed List', feeds_path, class: 'btn btn-default' %>

</div>
